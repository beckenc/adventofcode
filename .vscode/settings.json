{
    "cmake.configureOnOpen": false,
    "cmake.generator": "Unix Makefiles",
    "files.autoSave": "afterDelay",
    "cmake.sourceDirectory": "${workspaceFolder}",
    "cmake.copyCompileCommands": "${workspaceFolder}/build/compile_commands.json",
    "cmake.buildDirectory": "${workspaceFolder}/build/${variant:aoc_year}/${buildType}",
    "cmake.defaultVariants": {
        "buildType": {
            "default": "debug",
            "description": "The build type.",
            "choices": {
                "debug": {
                    "short": "Debug",
                    "long": "Disable optimizations - include debug information.",
                    "buildType": "Debug"
                },
                "release": {
                    "short": "Release",
                    "long": "Optimize for speed - exclude debug information.",
                    "buildType": "Release"
                },
                "minsize": {
                    "short": "MinSizeRel",
                    "long": "Optimize for smallest binary size - exclude debug information.",
                    "buildType": "MinSizeRel"
                },
                "reldeb": {
                    "short": "RelWithDebInfo",
                    "long": "Optimize for speed - include debug information.",
                    "buildType": "RelWithDebInfo"
                }
            }
        },
        "aoc_year": {
            "default": "2022",
            "description": "The year of the advent of code",
            "choices": {
                "2021": {
                    "short": "2021",
                    "long": "2021",
                    "settings": {
                        "AOC_YEAR": 2021
                    }
                },
                "2022": {
                    "short": "2022",
                    "long": "2022",                 
                    "settings": {
                        "AOC_YEAR": 2022
                    }                    
                }                
            }
        }
    },
